
name: BigQuery Data Validation

on:
  pull_request:
    paths:
      - '**/*.sql'
      - '.github/workflows/data-validation.yml'

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Authenticate & install BigQuery CLI
        uses: google-github-actions/setup-gcloud@v1
        with:
          project_id: neuralflow-e32ab
          service_account_key: ${{ secrets.GCP_SA_KEY }}
          install_components: bq
          export_default_credentials: true

      - name: Run validation query
        run: |
          bq query --nouse_legacy_sql \
            "SELECT COUNT(*) AS row_count FROM \`neuralflow-e32ab.dns_logs.validation_test\`;" \
            > validation.txt
          ROWS=$(tail -n +3 validation.txt | awk '{print $1}')
          if [[ "$ROWS" -lt 1 ]]; then
            echo "❌ No rows found in dns_logs.validation_test!"
            exit 1
          fi
          echo "✅ Found $ROWS rows in dns_logs.validation_test."
